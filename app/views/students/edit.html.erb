<h1> Edit: <%= @student.name %> </h1>

<% if flash[:student_errors]%>
    <% flash[:student_errors].each do |error| %>

        <p style="color:red;"> <%= error %> </p>
        
    <% end %>
<% end %>
    

<%= form_for(@student) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :mod %>
    <%= f.text_field :mod %>

    <%= f.submit 'Edit Student' %>

        
<% end %>